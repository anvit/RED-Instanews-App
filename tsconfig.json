{
    "compilerOptions": {
        "module": "none",
        // "module": "system",
        // "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": false,
        "target": "es3",
        "downlevelIteration": true,
        "lib": [
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
